# Minimal production example (copy to .env)
NAMO_NEXUS_TOKEN=<replace-with-token-from-step-3>
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8000
DATABASE_URL=sqlite:///namo_nexus_sovereign.db

# Core runtime
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
LOG_LEVEL=INFO
# DATABASE_URL is defined above for both stacks.
AUTO_CREATE_DB=false
MAX_MEMORY_ITEMS=1000
MEMORY_RETENTION_DAYS=365

# Enterprise API (main.py)
DB_PATH=data/namo_nexus_sovereign.db
# NAMO_NEXUS_TOKEN is defined above.
CORS_ALLOW_ORIGINS=http://localhost:3000
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_BURST=200

# Advanced stack (app/)
NAMO_APP_ENV=development
NAMO_LOG_LEVEL=INFO
NAMO_MEMORY_PATH=data/memory_log.json
NAMO_MAX_MEMORY_ENTRIES=200
NAMO_FEATURE_FLAGS={"ENABLE_SAFETY":true,"ENABLE_MEMORY":true,"ENABLE_INTEGRITY_REFLECTION":true,"ENABLE_COHERENCE_SCORE":true,"ENABLE_LOGGING":true,"ENABLE_INFINITY_MEMORY":false}
NAMO_EMOTION_SIM_MODE=false
NAMO_MEMORY_SIM_MODE=false
CHROMA_HOST=
CHROMA_PORT=443
CHROMA_SSL=true
CHROMA_AUTH_TOKEN=
ALLOWED_ORIGINS=*
ANONYMIZED_TELEMETRY=false

# PostgreSQL example
# DATABASE_URL=postgresql://namonexus:password@db:5432/namonexus

# Voice Analysis (v3.5.1+)
# Enable speech-to-text transcription using OpenAI Whisper
ENABLE_TRANSCRIPTION=true
# Whisper model size: tiny, base, small, medium, large
# Larger models are more accurate but slower and require more memory
# - tiny: ~1GB RAM, fastest, good for quick tests
# - base: ~1GB RAM, good balance for Thai language
# - small: ~2GB RAM, better accuracy
# - medium: ~5GB RAM, high accuracy
# - large: ~10GB RAM, best accuracy (requires GPU recommended)
WHISPER_MODEL=base
